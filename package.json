{
  "name": "@wenyan-md/core",
  "version": "1.0.18",
  "description": "Core library for Wenyan markdown rendering & publishing",
  "author": "Lei <caol64@gmail.com> (https://github.com/caol64)",
  "license": "Apache-2.0",
  "keywords": [
    "公众号",
    "markdown",
    "文颜",
    "wenyan",
    "wechat",
    "publishing",
    "renderer"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/caol64/wenyan-core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caol64/wenyan-core.git"
  },
  "bugs": {
    "url": "https://github.com/caol64/wenyan-core/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/core.js",
      "types": "./dist/types/core/index.d.ts",
      "browser": "./dist/browser/wenyan-core.js"
    },
    "./publish": {
      "import": "./dist/publish.js",
      "types": "./dist/types/wechat/publish.d.ts"
    },
    "./wrapper": {
      "import": "./dist/wrapper.js",
      "types": "./dist/types/node/wrapper.d.ts"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "check": "tsc --noEmit",
    "build": "vite build && tsc",
    "build:browser": "vite build --config vite.config.browser.ts",
    "build:styles": "vite build --config vite.config.styles.ts",
    "build:math": "vite build --config vite.config.math.ts",
    "build:all": "pnpm build && pnpm build:styles && pnpm build:math && pnpm build:browser",
    "test": "pnpm build && vitest",
    "test:wrapper": "pnpm build && vitest run test/wrapper.test.ts",
    "test:publish": "vitest run test/publish.test.ts",
    "test:realPublish": "vitest run test/realPublish.test.ts",
    "test:runtimeEnv": "vitest run test/runtimeEnv.test.ts",
    "prepublishOnly": "pnpm build:all"
  },
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "@types/css-tree": "^2.3.11",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.3.0",
    "ts-lib": "^0.0.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "css-tree": "^3.1.0",
    "front-matter": "^4.0.2",
    "highlight.js": "11.10.0",
    "marked": "^15.0.12",
    "marked-highlight": "^2.2.1",
    "mathjax-full": "3.2.2"
  },
  "peerDependencies": {
    "jsdom": "^27.4.0",
    "form-data-encoder": "^4.1.0",
    "formdata-node": "^6.0.3"
  },
  "peerDependenciesMeta": {
    "jsdom": {
      "optional": true
    },
    "form-data-encoder": {
      "optional": true
    },
    "formdata-node": {
      "optional": true
    }
  }
}
